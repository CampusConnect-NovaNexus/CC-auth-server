generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PHD
  STUDENT
  FACULTY
  STAFF
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  roles     Role[]   @default([STUDENT])
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  
  aboutMe         String?
  instaLink       String?
  githubLink      String?
  youtubeLink     String?
  XLink           String?
  leetcodeLink    String?
  codeforcesLink  String?
  contactNo       String?

  @@index([verified])
  @@index([createdAt])
}


